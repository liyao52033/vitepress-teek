{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "rootDir": ".",
      //  "ignoreDeprecations": "6.0",
     //   "baseUrl": ".",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client"
        ]
    },
    "include": [".",  "**/*.ts", "**/*.mts", "**/*.d.ts"]
}